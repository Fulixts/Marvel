@model Tools.Models.PagerModel

<style>
    .btn-group {
        position: relative;
        display: inline-flex;
        vertical-align: middle;
        justify-content: flex-end;
        align-items: center;
        align-content: center;
        flex-wrap: nowrap;
        flex-direction: row;
    }
</style>

<div class="col-3 btn-group p-1">
    <span class="col-5">
        Rows per Page:
    </span>
    <span class="col-5">
        <select class="form-control" id="pageSelector" asp-items="@Model.GetPageSize();" onchange="ChangePageSize(this);"></select>
    </span>
</div>

<div class="col-4 btn-group justify-content-center">
    <p>
        Showing @Model.CurrentPage / @Model.TotalPages Pages
    </p>
</div>

<script>
    function ChangePageSize(obj) {
        var controller = '@this.ViewContext.RouteData.Values["controller"].ToString()';

        window.location.href = "?" + controller + "/@Model.Action" + "&pageSize=" + obj.value + "&sortExpression=" + "@Model.SortExpression";
    }

</script>
